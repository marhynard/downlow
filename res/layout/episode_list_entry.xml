<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <TextView
         android:id="@+id/podcast_episode_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Episode Title" />

     <TextView
         android:id="@+id/publish_date"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:text="Publish Date" />

     <TextView
         android:id="@+id/in_downloads"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/publish_date"
         android:text="in_downloads" />

     <TextView
         android:id="@+id/completed"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/in_downloads"
         android:text="% Listened" />

     <TextView
         android:id="@+id/podcast_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/in_downloads"
         android:text="Podcast Title" />

</RelativeLayout>